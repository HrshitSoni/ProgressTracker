<Window x:Class="ProgressTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgressTracker"
        mc:Ignorable="d"
        Title="Progress Tracker" Height="550" Width="800" Icon="pack://application:,,,/Images/MainIcon.ico">
    <Window.Resources>
        <!-- Define a common LinearGradientBrush for reuse -->
        <LinearGradientBrush x:Key="BackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FFED8DFA" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ListViewColumn" Width="200"/>
            <ColumnDefinition x:Name ="ScrollBarColumn"  Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollBar Grid.Column="1" Background="#660033"/>

        <ListView x:Name="AppList" Grid.Column="0" Width="200" Background="{StaticResource BackgroundBrush}">
            <ListViewItem>
                <StackPanel Orientation="Horizontal" Background="White" Width="191">
                    <Button x:Name="MenuButton" Width="50" Height="42" Click="MenuButton_Click">
                        <Image Source="pack://application:,,,/Images/3LineMenuIcon.png" Stretch="Fill"/>
                    </Button>
                    <TextBlock Background="Black" Width="142" Height="42" 
                               Text="Applications" Foreground="AliceBlue" 
                               FontSize="25" TextAlignment="Center"/>
                </StackPanel>
            </ListViewItem>
        </ListView>
    </Grid>
</Window>
